{
  "version": 2,
  "builds": [
    { "src": "client/package.json",     "use": "@vercel/static-build", "config": { "distDir": "build" } },
    { "src": "server/api/index.js",     "use": "@vercel/node",        "config": { "maxDuration": 30 } }
  ],
  "rewrites": [
    { "source": "/api/(.*)",            "destination": "/server/api/index.js" },
    { "source": "/(.*)",                "destination": "/client/build/$1" }
  ]
}